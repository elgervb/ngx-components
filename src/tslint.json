{
  "extends": "../tslint.json",
  "rules": {
    "directive-selector": [
      true,
      "attribute",
      "evb",
      "camelCase"
    ],
    "component-selector": [
      true,
      "element",
      "evb",
      "kebab-case"
    ],
    "pipe-naming": false,
    "pipe-prefix": [
      true,
      "evb"
    ]
  }
}
